<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.TrangChuActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/holo_red_light">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_food"/>

        <RadioGroup
            android:id="@+id/groupPlaceFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/bg_food_place"
            >

            <RadioButton
                android:id="@+id/rdPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_places"
                android:button="@android:color/transparent"
                android:checked="true"
                android:text="Place"
                android:padding="10dp"
                android:textColor="@drawable/text_change_radio_trangchu"/>



            <RadioButton
                android:id="@+id/rdFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:button="@android:color/transparent"
                android:background="@drawable/bg_food"
                android:padding="10dp"
                android:textColor="@drawable/text_change_radio_trangchu"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:textSize="30sp"
            android:layout_marginRight="15dp"/>


    </androidx.appcompat.widget.Toolbar>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_trangchu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>